# @PKGNAME@
# @EGDIR@/etc/profile

if [ "${PS1}" -a "${BASH}" ]; then
    PS1="[\u@\h \W]\\$ "
fi

EDITOR="vi"
MANPAGER="less" # mdocml - man(1) hardcodes '/usr/bin/more -s'
PAGER="more"
if [ -z "${TERM}" -o "${TERM}" = "unknown" ]; then
    TERM=linux
fi
export EDITOR MANPAGER PAGER TERM

umask 0022

for i in /etc/profile.d/*.sh ; do
    if [ -r "$i" ]; then
        . $i
    fi
done
unset i
